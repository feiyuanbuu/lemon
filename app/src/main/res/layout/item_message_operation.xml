<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingVertical="8dp"
    >
    <ImageView
        android:id="@+id/iv_operation_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="top" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_operation_message"
        android:padding="16dp"
        android:gravity="center"
        android:layout_marginStart="8dp">

        <!-- 运营消息图标 -->
        <ImageView
            android:id="@+id/iv_operation_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_gift"
            android:layout_marginBottom="8dp"/>

        <!-- 消息内容 -->
        <TextView
            android:id="@+id/tv_operation_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginBottom="12dp"/>

        <!-- 操作按钮 -->
        <Button
            android:id="@+id/btn_operation_action"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:minWidth="120dp"
            android:background="@drawable/btn_operation_style"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="center"/>

        <!-- 时间 -->
        <TextView
            android:id="@+id/tv_operation_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#999999"
            android:layout_marginTop="8dp"/>

    </LinearLayout>

</LinearLayout>